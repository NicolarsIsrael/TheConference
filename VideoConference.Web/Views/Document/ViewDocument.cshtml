@model VideoConference.Web.Models.ViewDocumentViewModel
@{
    ViewData["Title"] = "ViewDocument";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    <div class="card box-shadow p-3">
        <div>
            Doc no. : @Model.DocumentNumber
        </div>
        <div>
            Title : @Model.Title
        </div>
        <div>
            Current office: @Model.CurrentOffice
        </div>
        <a class="btn btn-sm custom-primary-btn" style="width:100px" asp-controller="Document" asp-action="Minute" asp-route-id="@Model.Id">Minute</a>

        <h6 class="mt-3">Document Minute History</h6>
        <hr class="m-0" />
        @foreach (var docMinutes in Model.DocMinutes)
        {
            <div>
                <div> Date minuted: @docMinutes.DateCreatedString</div>
                <div>
                    From Dept/Office: @docMinutes.FromDept
                </div>
                <div>   To Dept/Office: @docMinutes.ToDept</div>
                <div> Submitted by: @docMinutes.SubmittedBy</div>
                <div>  Received by: @docMinutes.ReceivedBy</div>
                <div>   Remarks: @docMinutes.Remarks</div>
            </div>
            <hr />
        }
    </div>
</div>

