@model VideoConference.Web.Models.RegisterDocumentViewModel
@{
    ViewData["Title"] = "RegisterDocument";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container">
    @*<div class="login-register-logo-div mx-auto mt-3">
        <img src="~/Images/logo.jpg" />
    </div>*@
    <div class="card login-card mx-auto">
        <div class="card-body">
            <form asp-action="RegisterDocument">
                <h4 class="login-header">Register Document</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Office/Dept of submission</label>
                    <select asp-items="Model.Departments" name="SubmittedDeptId" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="SubmittedBy" class="control-label"></label>
                    <input asp-for="SubmittedBy" class="form-control" />
                    <span asp-validation-for="SubmittedBy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RecievedBy" class="control-label"></label>
                    <input asp-for="RecievedBy" class="form-control" />
                    <span asp-validation-for="RecievedBy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Remarks" class="control-label"></label>
                    <input asp-for="Remarks" class="form-control" />
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn custom-primary-btn btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

