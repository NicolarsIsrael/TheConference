@model VideoConference.Web.Models.MemoViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="login-register-logo-div mx-auto my-1">
        <img src="~/Images/logo.jpg" />
    </div>
    <div class="card w-100 mx-auto box-shadow">
        <div class="card-body">
            <form asp-action="Add">
                <h4 class="login-header">ADD MEMO</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Departments" class="control-label"></label>
                            <select name="selectedDeptId" asp-items="Model.Departments" class="form-control"></select>
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <label asp-for="Message" class="control-label"></label>
                    <textarea asp-for="Message" class="form-control" rows="7"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-block custom-primary-btn" value="Add new memo"/>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

