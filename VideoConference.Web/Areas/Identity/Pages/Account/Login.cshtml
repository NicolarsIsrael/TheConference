@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    .login-logo{
        width:50px;height:50px;margin-left:auto;margin-right:auto;
    }

    .login-logo>img{
        width:100%;height:100%;
    }

    .login-header{
        text-align:center
    }

    .login-card {
    min-width: 300px;
    max-width: 400px;
    box-shadow: 2px 2px 12px rgba(47, 47, 47, 0.40);
    margin-top:70px;
    margin-bottom:70px;
}

    .login-btn{
        border-radius:0;
        background-color:#e6630e;
        color:white;
        border:0;
    }

    .login-btn:hover{
        background-color:#ff6b0a;
         transform: scale(1.01);
        box-shadow: 2px 2px 12px rgba(47, 47, 47, 0.40);
        transition: all ease 0.3s;
        color: white;
    }

    .other-socials-intro{
        text-align:center;
        font-size:15px;
        font-weight:500;
        margin-bottom:1em;
    }

    .fb {
  background-color: #3B5998;
  color: white;
  border-radius:0;
}

.google {
  background-color: #dd4b39;
  color: white;
  border-radius:0;
}

.google:hover,
.fb:hover{
    color:white;
}

.google:active{
    outline:none !important;
}

</style>

@*<div class="my-1 login-logo">
    <img src="~/Images/logo.png"/>
</div>*@

<div class="card mx-auto login-card">
    <div class="card-body">
        <form id="account" method="post">
            <h4 class="login-header">LOGIN</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="mb-0">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block login-btn">Log in</button>
            </div>
            <div class="mb-2">
                <div class="other-socials-intro">
                    Or connect with social media accounts
                </div>
                <div class="w-100">
                    <a href="#" class="fb btn w-100 mb-1">
                        <i class="fa fa-facebook fa-fw"></i> Login with Facebook
                    </a>
                    <a href="#" class="google btn w-100 mb-1">
                        <i class="fa fa-google fa-fw">
                        </i> Login with Google+
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-6 p-0 pr-1">
                    <div style="text-align:right">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                    </div>
                </div>
                <div class="col-6 p-0 pl-1" style="border-left:1px solid black">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                </div>

                @*<div style="text-align:center">
                    <span>
                       
                    </span>
                    | 
                    <span>
                        
                    </span>
                </div>*@
            </div>

            <div class="row">
                <div class="col-6">

                    <div class="form-group">
                        <p class="mb-1">

                        </p>
                        <p class="mb-1">

                        </p>
                    </div>
                </div>

            </div>



        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




